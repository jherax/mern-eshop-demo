{
  "name": "mern-ecommerce-demo",
  "version": "1.0.0",
  "description": "E-commerce demo with MERN stack",
  "main": "dist/server.js",
  "scripts": {
    "prepare": "husky install",
    "release": "standard-version",
    "mongod": "node scripts/start-mongod.js",
    "build": "tsc -p tsconfig.build.json",
    "ts-config": "npm run build -- --showConfig",
    "dev-server": "concurrently -k \"npm:build -- -w\" \"nodemon dist/server.js\"",
    "lint": "eslint . --ext .ts",
    "test": "jest --detectOpenHandles",
    "test:staged": "jest --bail --findRelatedTests",
    "test:watch": "jest --silent=false --verbose --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mongoose": "^6.11.3",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@swc/jest": "^0.2.27",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "concurrently": "^7.6.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^13.2.3",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.5"
  },
  "lint-staged": {
    "{backend,scripts}/**/*.{js,jsx,ts,tsx}": [
      "npm run test:staged"
    ]
  }
}
